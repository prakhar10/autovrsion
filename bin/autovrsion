#!/usr/bin/env ruby

require 'listen'
require 'rugged'
require 'git'

case ARGV[0]
	when "options"
		puts "\tdisplay - "
		puts "\tstart"
		puts "\tstop"
		puts "\tcheck"
		puts "\tcreate" 
		puts "\treset"
		puts "\trewind"
	when "display"
		require 'autovrsion/display_versions.rb'
		d= DisplayLog.new
		d.disp(ARGV[1])
	when "start"
		require 'autovrsion/filelistener.rb'
		f = FileListen.new
		f.lis(ARGV[1])
	when "check"
		require 'autovrsion/version_checkout.rb'
		v = Checkout.new
		v.chk(ARGV[1])
	when "create"
		require 'autovrsion/create_repository.rb'
		c  = CreateRepo.new
		c.create(ARGV[1])
	when "reset"
		require 'autovrsion/reset.rb'
		r = Reset.new
		r.reset(ARGV[1])
	when "rewind"
		require 'autovrsion/rewind.rb'
		rw = Rewind.new
		rw.rewindto(ARGV[1])
	end	

